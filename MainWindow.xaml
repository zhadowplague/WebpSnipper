<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        x:Class="WebpSnipper.MainWindow"
        mc:Ignorable="d" WindowStyle="None" ResizeMode="NoResize"
        Title="WebpSnipper" Height="25" Width="100" Top="0" Left="0">
    <Window.TaskbarItemInfo>
        <TaskbarItemInfo Description="Animated image maker" ProgressValue="0" ProgressState="None"/>
    </Window.TaskbarItemInfo>
    <Grid>
        <ProgressBar x:Name="progressBar" Width="100" Height="25" Minimum="0" Maximum="1" Value="0"></ProgressBar>
        <Label x:Name="infoLabel" Visibility="Collapsed">Processing...</Label>
    </Grid>
</Window>
